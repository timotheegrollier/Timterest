{% extends 'base.html.twig' %}

{% block title 'Timterest' %}

{% block body %}
	{% if pins|length > 0 %}
		<h1 class="mb-4 text-center text-muted">
			{{pluralize(pins|length,'Pin')}}
		</h1>
		{% for row in pins|batch(3) %}
			<div class="row mb-5">
				{% for pin in row %}
					<div class="col-md-4">
						<article class="bg-white rounded shadow pin">
							<div class="mw-100 overflow-hidden">
								<a href="{{ path('app_pins_show',{id:pin.id})}}">
									<img src=" {{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/placeholder.jpg')) | imagine_filter('squared_thumbnail_medium')}} " alt=" {{pin.title}} " class="w-100 rounded-top">
								</a>
							</div>
							<h2 class="h5 pl-3 pt-3">
								<a class="text-secondary text-decoration-none" href="{{ path('app_pins_show',{id:pin.id})}}">
									{{pin.title}}
								</a>
							</h2>

							<p class="text-muted pl-3 pb-3">Submitted
								<small>Submitted [OWNER FULL NAME]</small>
							</p>
						</article>
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	{% else %}
		<p class="text-center h1 mt-5">No pins yet.
			<a href=" {{path('app_pins_create')}} ">Be the first</a>
		</p>
	{% endif %}
{% endblock %}
