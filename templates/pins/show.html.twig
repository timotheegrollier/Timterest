{% extends 'base.html.twig' %}

{% block title 'Timterest' %}

{% block body %}
	<article>
		<h1>
			{{pin.title}}
		</h1>
		<p>
			{{pin.description}}
		</p>
	</article>
	<a href=" {{path('app_pins_edit', {id:pin.id})}} ">Edit</a>
	<a href="#" onclick="event.preventDefault(); confirm('Are you sure ?') && document.getElementById('delete_form').submit()">Delete</a>
	<a href=" {{path('app_home')}} ">Go Back</a>


	<form id="delete_form" style="display:none;" action="{{path('app_pins_delete', {id:pin.id})}}">
		<input type="hidden" name="_method" value="DELETE">
		<input type="submit" value="DELETE">
	</form>
{% endblock %}
